generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         String   @default("SALES_REP")
  name         String
  companyName  String?
  salesGoal    Float    @default(500000)
  createdAt    DateTime @default(now())

  deals Deal[]
}

model Deal {
  id                String    @id @default(uuid())
  salesRepId        String
  clientCompanyName String
  dealName          String
  dealValue         Float
  grossProfit       Float
  stage             String    @default("COURTING")
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Forecasting fields
  expectedCloseDate DateTime?
  probability       Int       @default(10) // 0-100%
  forecastCategory  String    @default("PIPELINE") // COMMIT, BEST_CASE, PIPELINE, OMIT

  // MEDDIC Qualification fields
  meddic_metrics         String?  // Quantified business impact
  meddic_economicBuyer   String?  // Who has budget authority
  meddic_decisionCriteria String? // How they will decide
  meddic_decisionProcess String?  // Steps/timeline to decision
  meddic_identifyPain    String?  // Business pain points
  meddic_champion        String?  // Internal advocate

  salesRep    User         @relation(fields: [salesRepId], references: [id])
  files       File[]
  activities  Activity[]
  contacts    Contact[]
  competitors Competitor[]
}

model Contact {
  id        String   @id @default(uuid())
  dealId    String
  name      String
  title     String?
  email     String?
  phone     String?
  role      String   @default("INFLUENCER") // CHAMPION, ECONOMIC_BUYER, TECHNICAL_BUYER, INFLUENCER, BLOCKER
  notes     String?
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}

model Competitor {
  id         String   @id @default(uuid())
  dealId     String
  name       String
  strengths  String?
  weaknesses String?
  status     String   @default("ACTIVE") // ACTIVE, ELIMINATED, UNKNOWN
  notes      String?
  createdAt  DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}

model Activity {
  id           String    @id @default(uuid())
  dealId       String
  type         String    // CALL, EMAIL, MEETING, DEMO, NOTE
  subject      String
  notes        String?
  activityDate DateTime  @default(now())
  nextSteps    String?
  nextStepsDue DateTime?
  createdAt    DateTime  @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}

model File {
  id         String   @id @default(uuid())
  dealId     String
  filename   String
  filepath   String
  category   String   @default("INTERNAL") // INTERNAL, PROPOSAL, CONTRACT, NDA, SECURITY, SOW
  uploadedAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}
